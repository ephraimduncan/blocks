      "content": "\"use client\";\r\n\r\nimport { Avatar, AvatarFallback, AvatarImage } from \"@/components/ui/avatar\";\r\nimport { Button } from \"@/components/ui/button\";\r\nimport {\r\n    Card,\r\n    CardContent,\r\n    CardDescription,\r\n    CardFooter,\r\n    CardHeader,\r\n    CardTitle,\r\n} from \"@/components/ui/card\";\r\nimport { Input } from \"@/components/ui/input\";\r\nimport { Label } from \"@/components/ui/label\";\r\nimport { Separator } from \"@/components/ui/separator\";\r\nimport { Switch } from \"@/components/ui/switch\";\r\nimport { Textarea } from \"@/components/ui/textarea\";\r\n\r\nexport default function FormLayout06() {\r\n    return (\r\n        <div className=\"w-full max-w-3xl mx-auto p-4\">\r\n            <Card>\r\n                <CardHeader>\r\n                    <CardTitle>Profile Settings</CardTitle>\r\n                    <CardDescription>\r\n                        Manage your public profile and preferences.\r\n                    </CardDescription>\r\n                </CardHeader>\r\n                <CardContent className=\"space-y-8\">\r\n                    {/* Profile Picture */}\r\n                    <div className=\"flex flex-col space-y-4\">\r\n                        <Label>Profile Picture</Label>\r\n                        <div className=\"flex items-center gap-4\">\r\n                            <Avatar className=\"w-20 h-20\">\r\n                                <AvatarImage src=\"https://github.com/shadcn.png\" alt=\"@shadcn\" />\r\n                                <AvatarFallback>CN</AvatarFallback>\r\n                            </Avatar>\r\n                            <div className=\"flex flex-col gap-2\">\r\n                                <div className=\"flex gap-2\">\r\n                                    <Button variant=\"outline\" size=\"sm\">\r\n                                        Change Avatar\r\n                                    </Button>\r\n                                    <Button variant=\"ghost\" size=\"sm\" className=\"text-red-500 hover:text-red-600\">\r\n                                        Remove\r\n                                    </Button>\r\n                                </div>\r\n                                <p className=\"text-xs text-muted-foreground\">\r\n                                    JPG, GIF or PNG. Max size of 800K.\r\n                                </p>\r\n                            </div>\r\n                        </div>\r\n                    </div>\r\n\r\n                    <Separator />\r\n\r\n                    {/* Personal Information */}\r\n                    <div className=\"grid gap-6\">\r\n                        <div className=\"grid sm:grid-cols-2 gap-4\">\r\n                            <div className=\"grid gap-2\">\r\n                                <Label htmlFor=\"firstName\">First name</Label>\r\n                                <Input id=\"firstName\" placeholder=\"John\" defaultValue=\"John\" />\r\n                            </div>\r\n                            <div className=\"grid gap-2\">\r\n                                <Label htmlFor=\"lastName\">Last name</Label>\r\n                                <Input id=\"lastName\" placeholder=\"Doe\" defaultValue=\"Doe\" />\r\n                            </div>\r\n                        </div>\r\n\r\n                        <div className=\"grid gap-2\">\r\n                            <Label htmlFor=\"email\">Email address</Label>\r\n                            <Input id=\"email\" type=\"email\" placeholder=\"john@example.com\" defaultValue=\"john@example.com\" />\r\n                        </div>\r\n\r\n                        <div className=\"grid gap-2\">\r\n                            <Label htmlFor=\"bio\">Bio</Label>\r\n                            <Textarea\r\n                                id=\"bio\"\r\n                                placeholder=\"Tell us a little bit about yourself\"\r\n                                className=\"min-h-[100px]\"\r\n                            />\r\n                            <p className=\"text-xs text-muted-foreground\">\r\n                                This will be displayed on your public profile.\r\n                            </p>\r\n                        </div>\r\n                    </div>\r\n\r\n                    <Separator />\r\n\r\n                    {/* Notifications */}\r\n                    <div className=\"space-y-4\">\r\n                        <h3 className=\"text-lg font-medium\">Notifications</h3>\r\n                        <div className=\"grid gap-4\">\r\n                            <div className=\"flex items-center justify-between space-x-2\">\r\n                                <Label htmlFor=\"marketing\" className=\"flex flex-col space-y-1\">\r\n                                    <span>Marketing emails</span>\r\n                                    <span className=\"font-normal text-xs text-muted-foreground\">\r\n                                        Receive emails about new products, features, and more.\r\n                                    </span>\r\n                                </Label>\r\n                                <Switch id=\"marketing\" />\r\n                            </div>\r\n                            <div className=\"flex items-center justify-between space-x-2\">\r\n                                <Label htmlFor=\"social\" className=\"flex flex-col space-y-1\">\r\n                                    <span>Social emails</span>\r\n                                    <span className=\"font-normal text-xs text-muted-foreground\">\r\n                                        Receive emails for friend requests, follows, and more.\r\n                                    </span>\r\n                                </Label>\r\n                                <Switch id=\"social\" defaultChecked />\r\n                            </div>\r\n                            <div className=\"flex items-center justify-between space-x-2\">\r\n                                <Label htmlFor=\"security\" className=\"flex flex-col space-y-1\">\r\n                                    <span>Security emails</span>\r\n                                    <span className=\"font-normal text-xs text-muted-foreground\">\r\n                                        Receive emails about your account activity and security.\r\n                                    </span>\r\n                                </Label>\r\n                                <Switch id=\"security\" defaultChecked disabled />\r\n                            </div>\r\n                        </div>\r\n                    </div>\r\n                </CardContent>\r\n                <CardFooter className=\"flex justify-end gap-2\">\r\n                    <Button variant=\"outline\">Cancel</Button>\r\n                    <Button>Save Changes</Button>\r\n                </CardFooter>\r\n            </Card>\r\n        </div>\r\n    );\r\n}\r\n"
    }
  ],
  "categories": [
    "form-layout"
  ]
